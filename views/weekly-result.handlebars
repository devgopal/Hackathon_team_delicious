<div id="parameters">
   <p class="text">Parameters:</p>
   <br />
   <center>
      Diet: {{params.diet}} <br />
      Ingredients Excluded: {{#each excluded}}{{this }}{{/each}} <br />
      Health Plan: {{params.health}} <br />
      Calories: {{params.min}} - {{params.max}}
   </center>
   <br />
   <center><button on-click="location.href='/weekly' class="btn btn-warning">Edit</button></center>
</div>

</div>
